generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prompt_Q {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  answeredAt DateTime?
  prompt     String
  response   String?
  suggestion String?
  promptFrom Source?
  status     Status   @default(UNGRADED)
}

model Prompt_A {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  answeredAt DateTime?
  prompt     String
  response   String?
  suggestion String?
  responseFrom Source?
  status     Status   @default(UNGRADED)
}

enum Status {
  PERFECT
  GOOD
  MEDIUM
  FAULTY
  BAD
  UNGRADED
}

enum Source {
  PULI
  GPT3
  USER
}