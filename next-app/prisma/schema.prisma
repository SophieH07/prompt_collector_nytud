generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prompt {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String?  @unique
  prompt    String
  response  String
  status    Status   @default(UNGRADED)
}

enum Status {
  PERFECT
  FIX
  BAD
  UNGRADED
}
